<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:data="clr-namespace:RestaurantPosMaui.Data" 
             xmlns:models="clr-namespace:RestaurantPosMaui.Models"
             xmlns:vm="clr-namespace:RestaurantPosMaui.ViewModels"
             x:Class="RestaurantPosMaui.Pages.MainPage"
             x:DataType="vm:HomeViewModel"
             Shell.NavBarIsVisible="False">

    <Grid ColumnDefinitions=".75*, .25*">
        <Grid Grid.Column="0"
              RowDefinitions="Auto, Auto, *" 
              RowSpacing="15"
              Padding="15">
            <Label Grid.Row="0" Text="Hello, Nirmal Perera" FontSize="22" FontAttributes="Bold"/>

            <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:MenuCategoryModel">
                        <Border Padding="20,10" 
                                BackgroundColor="{StaticResource LightWheet}"
                                StrokeShape="RoundRectangle 10" 
                                StrokeThickness="0">
                            <HorizontalStackLayout Spacing="5">
                                <Image Source="{Binding Icon}" 
                                       HeightRequest="20"
                                       WidthRequest="20" 
                                       VerticalOptions="Center" />
                                <Label Text="{Binding Name}" 
                                       TextColor="Maroon"
                                       VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="TextColor" Value="White"/>
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </HorizontalStackLayout>
                            <Border.Triggers>
                                <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="BackgroundColor" Value="Maroon"/>
                                </DataTrigger>
                            </Border.Triggers>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=SelectCategoryCommand}"
                                                      CommandParameter="{Binding Id}" />
                            </Border.GestureRecognizers>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>

            <Grid Grid.Row="2">
                <!-- Collection view for menu items -->
                <CollectionView ItemsSource="{Binding MenuItems}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="4" HorizontalItemSpacing="10" VerticalItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="data:MenuItem">
                            <Border Padding="10" StrokeShape="RoundRectangle 10" Stroke="#DDD">
                                <VerticalStackLayout Spacing="10">
                                    <Border BackgroundColor="{StaticResource LightWheet}" HeightRequest="150" StrokeThickness="0">
                                        <Image Source="{Binding Icon}" 
                                               WidthRequest="250"
                                               MaximumHeightRequest="150"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Aspect="Center"/>                 
                                    </Border>
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        Text="{Binding Name}" />
                                    <Label 
                                        FontSize="12"
                                        TextColor="Gray"
                                        Text="{Binding Description}" />
                                    <FlexLayout JustifyContent="SpaceBetween">
                                        <Label 
                                            FontSize="25"
                                            FontAttributes="Bold"
                                            TextColor="Maroon"
                                            Text="{Binding Price, StringFormat='{0:C}'}"/>
                                        <ImageButton 
                                            CornerRadius="8"
                                            BackgroundColor="{StaticResource LightWheet}"
                                            Source="shopping_bag_regular_24.png"
                                            HeightRequest="25"
                                            WidthRequest="25"/>
                                    </FlexLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <BoxView IsVisible="{Binding IsLoading}"
                         VerticalOptions="Fill"
                         HorizontalOptions="Fill"
                         Color="{StaticResource LightWheet}"/>
                <!-- Loading indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   HeightRequest="25"
                                   WidthRequest="25"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Color="Maroon"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" BackgroundColor="{StaticResource LightWheet}">
            <Label Text="Current Order Items" />

        </Grid>
    </Grid>

</ContentPage>
